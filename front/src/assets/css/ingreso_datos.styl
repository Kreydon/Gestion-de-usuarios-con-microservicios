html
    font-family: 'Shantell Sans', cursive
    font-weight: 100
    font-size: 15px
    body
        margin-top: 50px
        background-color: #000
        header
            h1
                color: white
                text-align: center
        main
            .flex-container
                display: flex
                align-items: center
                flex-wrap: wrap
                justify-content: center
                background-color: #333
                margin: 100px 50px
                border: 20px solid #000
                outline: 4px solid #1c5
                form
                    min-width: 400px
                    flex: 1
                    text-align: center
                    padding: 30px
                    order: 10
                    .flex-container2
                        display: flex
                        justify-content: space-evenly
                        label
                            display: inline-block
                            color: white
                            width: 150px
                            text-align: right
                            margin-right: 10px
                            margin: 5px
                        select
                            margin: 5px
                            padding: 7px
                            border: none
                            border-bottom: 3px solid #1c5
                            background-color: transparent
                            color: white
                        select:focus
                            color: black
                        input
                            margin: 5px
                            padding: 7px
                            border: none
                            border-bottom: 3px solid #1c5
                            background-color: transparent
                            color: white
                        input:focus
                            background: linear-gradient(to bottom, transparent, #444)
                            outline: none
                            border-bottom: 3px solid #5f9
                        .derecha
                            width: 35%
                            display: flex
                            justify-content: center
                            align-items: center
                            flex-wrap: wrap
                            img
                                width: 60%
                                height: 50%
                                border-radius: 30%
                            .img-content
                                label
                                    text-align: center
                    input
                        margin: 5px
                        padding: 7px
                        border: none
                        border-bottom: 3px solid #1c5
                        background-color: transparent
                        color: white
                    input[type="submit"]
                        width: 80%
                        margin-top: 20px
                        background-color: #094
                        border-bottom: none
                        padding: 14px
                    input[type="submit"]:hover
                        background-color: rgb(3, 117, 54)
                    input[type="submit"]:focus
                        background-color: #094
                    input[type="submit"]:focus
                        background-color: linear-gradient(to bottom, #094, rgb(3, 117, 54))